{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Wildfires in Australia (2019-2021)",
  "projection": { "type": "equirectangular", "center": [133, -27], "scale": 900 },
  
  "layer": [
    {
      "data": { 
        "url": "js/australia.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "#eeeeee", "stroke": "white" }
    },
    {
      "data": { "url": "data/fires_sample.csv" },
      "mark": { "type": "circle", "tooltip": {"content": "data"} },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude":  { "field": "latitude",  "type": "quantitative" },
        "size":      { "field": "intensity", "type": "quantitative", "title": "Fire intensity" },
        "color":     { "field": "year",      "type": "nominal", "title": "Year" }
      }
    }
  ]
}
