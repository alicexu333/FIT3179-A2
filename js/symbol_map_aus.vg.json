{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 650,
  "title": "Wildfires in Australia (2019-2020, NASA FIRMS)",
  "projection": { "type": "mercator", "center": [133, -27], "scale": 900 },

  "layer": [

    {
      "data": { "graticule": { "step": [10, 10] } },
      "mark": { "type": "geoshape", "stroke": "#cfcfcf", "strokeWidth": 0.6 },
      "encoding": {}
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/alicexu333/FIT3179-A2/refs/heads/main/js/au-states-topo.json",
        "format": { "type": "topojson", "feature": "austates" }
      },
      "mark": { "type": "geoshape", "fill": "#e6e6e6", "stroke": "white" }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/alicexu333/FIT3179-A2/refs/heads/main/data/fires_sample.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "calculate": "year(datum.acq_date)", "as": "year" },
        { "filter": "datum.confidence >= 60" },
        { "filter": "toNumber(datum.year) >= 2019 && toNumber(datum.year) <= 2021" }
      ],
      "mark": { "type": "circle", "opacity": 0.8 },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude":  { "field": "latitude",  "type": "quantitative" },
        "size": {
          "field": "frp",
          "type": "quantitative",
          "title": "Fire radiative power (FRP)",
          "scale": { "range": [10, 600] }
        },
        "color": { "field": "year", "type": "nominal", "title": "Year" },
        "tooltip": [
          { "field": "acq_date", "type": "temporal", "title": "Date" },
          { "field": "confidence", "type": "quantitative", "title": "Confidence" },
          { "field": "frp", "type": "quantitative", "title": "FRP (MW)" },
          { "field": "latitude", "type": "quantitative" },
          { "field": "longitude", "type": "quantitative" }
        ]
      
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alicexu333/FIT3179-A2/refs/heads/main/data/au_state_labels.csv"
      },
      "mark": { "type": "text", "fontSize": 12, "fontWeight": "bold", "fill": "#6b6b6b" },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "text":      { "field": "name", "type": "nominal" }
      }
    }
  ],

  "config": {
    "background": "#e3eef5",
    "legend": { "orient": "bottom" },
    "view": { "stroke": null }
  }
}


